<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/edithistory_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="CLPC12, Date: 2020-11-11"/>

    <CheckBox
        android:id="@+id/chk_class_attended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Attended"/>
    <CheckBox
        android:id="@+id/chk_class_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Cancelled"/>

    <Button
        android:id="@+id/save_button_dialog"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save" />

    <Button
        android:id="@+id/del_button_dialog"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Delete" />

</LinearLayout>